<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="urn:wildfly:grpc:1.0"
           xmlns="urn:wildfly:grpc:1.0"
           elementFormDefault="qualified"
           version="1.0">

    <!-- The subsystem root element -->
    <xs:element name="subsystem" type="grpc-subsystemType"/>
 
    <xs:complexType name="grpc-subsystemType">
        <xs:annotation>
            <xs:documentation>
                <![CDATA[
                The configuration of the gRPC subsystem.
            ]]>
            </xs:documentation>
        </xs:annotation>
        <xs:all minOccurs="0" maxOccurs="1"> 
            <xs:element name="flow-control-window" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1"/>
            <xs:element name="handshake-timeout" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="initial-flow-control-window" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="keep-alive-time" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="keep-alive-timeout" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="key-manager-name" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="max-concurrent-calls-per-connection" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="max-connection-age" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="max-connection-age-grace" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="max-connection-idle" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="max-inbound-message-size" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="max-inbound-metadata-size" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="permit-keep-alive-time" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="permit-keep-alive-without-calls" type="xs:boolean" minOccurs="0" maxOccurs="1" />
            <xs:element name="protocol-provider" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="server-host" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="server-port" type="xs:positiveInteger" minOccurs="0" maxOccurs="1"/>
            <xs:element name="session-cache-size" type="nonnegativeJavaLong" minOccurs="0" maxOccurs="1" />
            <xs:element name="session-timeout" type="nonnegativeJavaLong" minOccurs="0" maxOccurs="1" />
            <xs:element name="shutdown-timeout" type="nonnegativeJavaInt" minOccurs="0" maxOccurs="1" />
            <xs:element name="ssl-context-name" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="start-tls" type="xs:boolean" minOccurs="0" maxOccurs="1" />
            <xs:element name="trust-manager-name" type="xs:string" minOccurs="0" maxOccurs="1"/>
         </xs:all>
    </xs:complexType>
    
    <xs:simpleType name="nonnegativeJavaInt" id="nonnegativeJavaInt">
        <xs:restriction base="xs:unsignedLong">
            <xs:maxInclusive value="2147483647"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="nonnegativeJavaLong" id="nonnegativeJavaLong">
        <xs:restriction base="xs:unsignedLong">
            <xs:maxInclusive value="9223372036854775807"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>
